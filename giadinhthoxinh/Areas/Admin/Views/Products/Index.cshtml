@model IEnumerable<giadinhthoxinh.Models.tblProduct>

@{ ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }
<link href="~/Content/assets/styles/table_admin.css" rel="stylesheet" />

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}

<section class="content-header p-2">
</section>

<section class="content ml-2 mr-2">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title text-lg text-danger">Danh sách sản phẩm</h1>

            <div class="card-tools">
                @Html.ActionLink("thêm mới", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>

        <div class="card-body table-responsive text-nowrap" style="overflow: scroll; height: 80vh;">
            <table class="table table-hover table-striped ">
                <thead class="thead-dark">
                    <tr>
                        <th></th>
                        <th>
                            Mã SP
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sDescribe)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sColor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sSize)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.iQuantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sUnit)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.tblCategory.sCategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tblPromote.sPromoteName)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.ActionLink("sửa", "Edit", new { id = item.PK_iProductID }, new { @class = "btn btn-primary btn-warning" }) |
                            @Html.ActionLink("chi tiết", "Details", new { id = item.PK_iProductID }, new { @class = "btn btn-primary btn-info" }) |
                            @Html.ActionLink("xóa", "Delete", new { id = item.PK_iProductID }, new { @class = "btn btn-primary btn-danger" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PK_iProductID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sProductName)
                        </td>
                        <td>
                            <p style="width: 400px !important; word-wrap: break-word !important;">
                                @Html.DisplayFor(modelItem => item.sDescribe)
                            </p>
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.fPrice)*@
                            @string.Format("{0:#,0}", item.fPrice)₫

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sColor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sSize)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.sImage)*@
                            <img src="@Url.Content(item.sImage)" style="width: 70px; height: 70px; object-fit: cover" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.iQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sUnit)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.tblCategory.sCategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tblPromote.sPromoteName)
                        </td>

                    </tr>}
                </tbody>
            </table>
        </div>
        <div class="card-footer">

        </div>
    </div>
</section>