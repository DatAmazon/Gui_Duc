@model IEnumerable<giadinhthoxinh.Models.tblOrder>


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
}
<div class="card-body table-responsive text-nowrap" style="overflow: scroll; height: 700px;">
    <table class="table table-hover table-striped ">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>
                    Mã HĐ
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sCustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sCustomerPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sDeliveryAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dInvoidDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sBiller)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.iDeliveryMethod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fSurcharge)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.iTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.iPaid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sState)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblUser.sEmail)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>

                    @Html.ActionLink("sửa", "Edit", new { id = item.PK_iOrderID }, new { @class = "btn btn-primary btn-warning" }) |
                    @Html.ActionLink("chi tiết", "Details", new { id = item.PK_iOrderID }, new { @class = "btn btn-primary btn-info" }) 
                    @*@Html.ActionLink("xóa", "Delete", new { id = item.PK_iOrderID }, new { @class = "btn btn-primary btn-danger" })*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PK_iOrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sCustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sCustomerPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sDeliveryAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dInvoidDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sBiller)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iDeliveryMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fSurcharge)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.iTotal)*@
                    @string.Format("{0:#,0}", item.iTotal)₫

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iPaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblUser.sEmail)
                </td>

            </tr>}
        </tbody>
    </table>
    </div>

